<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/font_unit_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_1</item>
    </style>

    <style name="Title.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Blue">
        <item name="android:textColor">@color/licorice</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">@dimen/font_unit_16</item>
        <item name="android:lineSpacingExtra">@dimen/space_unit_1</item>
    </style>

    <style name="Caption.Grey">
        <item name="android:textColor">@color/quartz</item>
    </style>

    <style name="ActionIcon">
        <item name="android:layout_width">@dimen/action_icon_width</item>
        <item name="android:layout_height">@dimen/action_icon_height</item>
        <item name="tint">@color/ghost</item>
    </style>

    <style name="ActionIcon.Chevron">
        <item name="android:src">@drawable/ic_chevron</item>
    </style>
</resources>
